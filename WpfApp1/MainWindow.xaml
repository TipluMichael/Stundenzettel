        <DataGrid x:Name="GlobalGrid" HorizontalAlignment="Left" Height="396" Margin="0,23,0,0" VerticalAlignment="Top" Width="792" Grid.ColumnSpan="2" Loaded="GlobalGrid_Loaded"/>
